# Vibe Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=vibe-dating
DYNAMODB_ENDPOINT_URL=  # Leave empty for production, use localhost:8000 for local development

# S3 Configuration
S3_BUCKET_NAME=vibe-media-bucket
S3_ENDPOINT_URL=  # Leave empty for production, use localhost:4566 for local development
CLOUDFRONT_DOMAIN=your_cloudfront_domain.cloudfront.net

# Authentication Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_SECRET=your_telegram_webhook_secret

# Agora Configuration
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate

# Application Configuration
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# Media Configuration
MAX_IMAGE_SIZE_MB=10
MAX_VIDEO_SIZE_MB=50
MAX_VIDEO_DURATION_SECONDS=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=3600 